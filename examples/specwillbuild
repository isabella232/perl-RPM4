use strict;
use RPM4;
use Getopt::Long;

(@ARGV) or die 
"$0 specfile1.spec [specfile2.spec [...]] 
Give rpms filename produce by a specfile
";

foreach (@ARGV) {
    RPM4::readconfig();
    my $spec = RPM4::specnew($_, undef, undef, undef, 1, 1);
    defined $spec or do {
        warn "unable to parse $_\n";
        next;
    };
    print "$_:\n";
    print $spec->srcrpm . "\n";
    foreach my $bin ($spec->binrpm) {
        print "$bin\n";
    }
}
